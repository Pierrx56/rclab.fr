{% extends "base.html.twig" %}

{% block body %}

    <h3>Body de la page news</h3>

    <div>
        {% for news in listNews %}
            <div>
                <h4>{{ news.news }} du {{ news.debutPublication|date('Y-m-d H:i') }}
                    au {{ news.finPublication|date('Y-m-d H:i') }}</h4>
                <p>{{ news.description }}</p>
                {% if news.lien is not null %}
                    <p><a href="{{ news.lien }}">
                            {{ news.lien }}
                        </a></p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
    <div>
        <p>pagination : </p>
        {% if page > 1 %}
            <a href="{{ path('rclab_website_actualite_news', { 'page': (page - 1) }) }}">précédent</a>
        {% endif %}
        {{ page }}
        {% if isSuivant is not null %}
            <a href="{{ path('rclab_website_actualite_news', {'page': (page + 1) }) }}">suivant</a>
        {% endif %}
    </div>

{% endblock %}